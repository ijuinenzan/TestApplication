<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.example.ijuin.testapplication.utils.MyUtils"/>
        <variable name="chatMessage" type="com.example.ijuin.testapplication.models.MessageItemModel"/>
        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:visibility="@{chatMessage.isMine ? View.GONE : View.VISIBLE}"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/left_node_bg">

                <LinearLayout
                    android:id="@+id/layout_audio_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#33000000"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_play_pause_audio_left"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_play_48dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <SeekBar
                            android:id="@+id/seekbar_audio_left"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                        <android.support.percent.PercentRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_current_time_left"
                                app:layout_marginStartPercent="2%"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0:00"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/txt_end_time_left"
                                app:layout_marginStartPercent="85%"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0:10"
                                android:textSize="15sp"/>

                        </android.support.percent.PercentRelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_average"
                android:layout_marginTop="@dimen/margin_average"
                android:text="@{chatMessage.timeStamp}"
                style="@style/info_textviews"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:visibility="@{chatMessage.isMine ? View.VISIBLE: View.GONE}"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_average"
                android:background="@drawable/right_node_bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_audio_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#33000000"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_play_pause_audio_right"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/ic_play_48dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <SeekBar
                            android:id="@+id/seekbar_audio_right"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                        <android.support.percent.PercentRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_current_time_right"
                                app:layout_marginStartPercent="2%"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0:00"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/txt_end_time_right"
                                app:layout_marginStartPercent="85%"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0:10"
                                android:textSize="15sp"/>

                        </android.support.percent.PercentRelativeLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_average"
                android:text="@={chatMessage.timeStamp}"
                style="@style/info_textviews"/>

        </LinearLayout>

    </LinearLayout>
</layout>
